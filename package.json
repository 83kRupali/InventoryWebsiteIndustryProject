{
  "name": "fusion-starter",
  "private": true,
  "type": "module",
  "pkg": {
    "assets": [
      "dist/spa/*"
    ],
    "scripts": [
      "dist/server/**/*.js"
    ]
  },
  "scripts": {
    "dev": "vite",
    "dev:full": "npm run dev:backend & npm run dev",
    "dev:backend": "cd backend && uvicorn predict_api:app --reload --host 0.0.0.0 --port 8000",

    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "tsc",

    "start": "node dist/server/start.js",
    "test": "vitest --run",
    "format.fix": "prettier --write .",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@google/generative-ai": "^0.15.0",
    "axios": "^1.13.1",
    "bcrypt": "^6.0.0",
    "chart.js": "^4.5.1",
    "compromise": "^14.14.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "react-chartjs-2": "^5.3.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.2.1",
    "@vitejs/plugin-react-swc": "^4.0.0",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "typescript": "^5.9.2",
    "vite": "^7.1.2"
  },
  "packageManager": "pnpm@10.14.0"
}
